html
    head
        title=title
        //- Import fonts from Google Fonts
        link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lobster')
        link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Rubik:300,400,700')

        //- Import Font Awesome
        script(defer, src="https://use.fontawesome.com/releases/v5.0.8/js/all.js")

        link(rel='stylesheet', href='/stylesheets/layout/reset.css')
        link(rel='stylesheet', href='/stylesheets/accounts/signup.css')
    body
        #box
            #im-so-tilted
            #logo-container
                a.logo(href='/') 
                    span.highlight Open
                    | Reviews
            #action-choices
                h2#signup.big-text.selected Sign Up

            if message
                p.error #{message}
            #fields
                form(action="/accounts/register", method='post')
                    .field
                        input.text-field.signup-field(type="text", placeholder="username", name="username")
                        .field-icon
                            i.fas.fa-user
                    .field
                        input.text-field.signup-field(type="text", placeholder="email", name="email")
                        .field-icon
                            i.fas.fa-envelope
                    .field
                        input.text-field.signup-field(type="password", placeholder="password", name="password")
                        .field-icon
                            i.fas.fa-lock
                    .field
                        input.text-field.signup-field(type="password", placeholder="retype your password", name="password2")
                        .field-icon
                            i.fas.fa-lock
                    #submit
                        input#submit-btn(type='submit', value='Create an account!')